  <div class="wrapper">
    <div class="section-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
          <!-- Remove the .animated class if you don't want things to move -->
            <h1 class="animated slideInLeft"><span>Новости</span></h1>
          </div>
        </div>
      </div>
    </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
      <div class="timeline-block">
      <!-- First blog post -->
      <% @articles.each do |article| %>
        <div class="blog-summary">
          <h4 class=" " if ><%= link_to article.name, article %></h4>
          <time datetime="<%= Russian::strftime(article.created_at, "%d %B %Y") %>" class="timestamp hidden-xs"><%= Russian::strftime(article.created_at, "%d %B %Y") %></time>
        <ul class="text-muted list-inline">
          <li>
            <i class="fa fa-calendar"></i> <%= Russian::strftime(article.created_at, "%d %B %Y") %>
          </li>
        </ul>
        <hr>
          <p class="blog-summary-text">
            <%= image_tag article.image.url, :class => "pull-right img-responsive blog-img", :alt => article.name %>
            <%= truncate( raw( sanitize(article.text, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 200, :omission => "...") %>
          </p>
        </div>
      <% end %>
      </div>
      <!-- Pagination -->
      <%= paginate @articles %>
    </div>
    <div class="col-sm-4">
      <!-- Social Links -->
      <h3 class="hl">Подписка на новости</h3>
      <hr>
      <div class="social-icons social-icons-default">
      <ul>
        <li class="rss"><a href="#"><i class="fa fa-rss"></i></a></li>
        <li class="twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
        <li class="facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
        <li class="vk"><a href="#"><i class="fa fa-vk"></i></a></li>
      </ul>
      <div class="clearfix"></div>
      </div>
      
      <!-- Recently Added -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Последние новости</h3>
        </div>
        <div class="panel-body">
          <div class="recent-blogs">
            <ul>
              <% @articles.limit(7).each do |article| %>
                <li>
                  <%= link_to article.name, article, :class => " " %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      
    </div>
    </div>
  </div>
  </div>