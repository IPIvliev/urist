<!-- Main body
================== -->
  <div class="wrapper">
    <div class="section-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <!-- Remove the .animated class if you don't want things to move -->
            <h1 class="animated slideInLeft"><span>Blog Post</span></h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <!-- Blog Post -->
          <h4><%= @article.name %></h4>
          <ul class="text-muted list-inline">
            <li><i class="fa fa-calendar"></i> <%= Russian::strftime(@article.created_at, "%d %B %Y") %></li>
          </ul>
          <hr>
          <p class="blog-text">
            <%= image_tag @article.image.url, :class => "pull-right img-responsive blog-img", :alt => @article.name %>
            <%= @article.text %>
          </p>

        </div>
        <div class="col-sm-4">
          <!-- Social Links -->
          <h3 class="hl">Социальные вкладки</h3>
          <hr>
          <div class="social-icons social-icons-default">
            <ul>
                <li class="rss"><a href="#"><i class="fa fa-rss"></i></a></li>
                <li class="twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                <li class="facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                <li class="vk"><a href="#"><i class="fa fa-vk"></i></a></li>
            </ul>
            <div class="clearfix"></div>
          </div>

          <br />
          
          <!-- Recently Added -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Последние новости</h3>
            </div>
            <div class="panel-body">
              <div class="recent-blogs">
                <ul>
                	<% Article.order("created_at DESC").limit(7).each do |article| %>
                  		<li>
                  			<%= link_to article.name, article, :class => "" %>
                  		</li>
                  	<% end %>
                </ul>
              </div>
            </div>
          </div>
          
        </div>

      </div>
              <strong><%= link_to "Все новости", articles_path %></strong>
    </div>
  </div>