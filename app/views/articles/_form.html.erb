

<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
          <div class="col-md-12">
            <div class="form-group">
            <%= f.label "Заголовок" %><br />
            <%= f.text_field :name, :class => "form-control" %>
  </div>
  </div>
</div>
<div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="exampleInputEmail1">Обложка статьи</label>
              <% if @article.image? %>
                  <br><%= image_tag @article.image.url %> <%= f.file_field :image, :class => "form-control" %>
              <% else %>
                  <%= f.file_field :image, :class => "form-control" %>
              <% end %>  
            </div> 
  </div>
</div>
<div class="row">
          <div class="col-md-12">
            <div class="form-group">
            <%= f.label "Текст" %><br />
            <%= f.cktext_area :text, :class => "form-control", :ckeditor => { :toolbar => 'mini'} %>
  </div>
  </div>
</div>
            <%= f.submit "Отправить", :class => "btn btn-rw btn-primary" %>
            <%= link_to "Отменить", :back, :class => "btn btn-royal btn-rw" %>
<% end %>
