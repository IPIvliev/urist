        <% flash.each do |key, value| %>

            <div class="col-md-12">
                <%= content_tag(:div, value, class: "alert alert-#{key}") %>
            </div>

        <% end %>


		  <h2 class="hl top-zero">Отправить жалобу</h2>
		  <hr>
		  <p>Ваша жалоба на горячее водоснабжение или отопление в обслуживаемых ООО "Нижновтеплоэнерго" домах будет рассмотрена специалистами нашей организации в самое ближайшее время.</p>


<%= form_for(@apeal) do |f| %>
  <% if @apeal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apeal.errors.count, "error") %> prohibited this apeal from being saved:</h2>

      <ul>
      <% @apeal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

        <div class="row">
          <div class="col-md-6">
            <%= f.label "ФИО" %><br />
            <%= f.text_field :who, :class => "form-control", :required => "required" %>
          </div>
          <div class="col-md-6">
            <%= f.label "Номер телефона" %><br />
            <%= f.text_field :phone, :class => "form-control", :id => "phone", :required => "required" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.label "Улица" %><br />
            <%= f.text_field :street, :class => "form-control", :required => "required" %>
          </div>
          <div class="col-md-4">
            <%= f.label "Номер дома" %><br />
            <%= f.text_field :house, :class => "form-control", :required => "required" %>
          </div>
          <div class="col-md-4">
            <%= f.label "Корпус" %><br />
            <%= f.text_field :korpus, :class => "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label "Текст жалобы" %><br />
            <%= f.text_area :term, :cols => 120, :rows => 7, :class => "form-control", :required => "required" %>
          </div>
        </div>
        <br>
  <div class="actions">
    <%= f.submit "Отправить", :class => "btn btn-lg btn-red"  %>
  </div>
<% end %>

