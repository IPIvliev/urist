<!-- Main body
================== -->
  <div class="wrapper">
    <div class="section-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <!-- Remove the .animated class if you don't want things to move -->
            <h1 class="animated slideInLeft"><span>Аккаунт</span></h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <%= render "profile_menu" %>
        <!-- Avatar & social links -->
        <div class="col-sm-8 col-md-6">
          <div class="row">
            <div class="col-sm-4">
              <div class="thumbnail">
                <div class="avatar">
                  <a href="#" class="thumbnail bottom-15" data-toggle="modal" data-target="#upload-avatar">
                  	<% if current_user.avatar? %>
	                    <%= image_tag current_user.avatar_url %>
                    <% else %>
                    	<%= image_tag "/images/no-avatar.png" %>
                    <% end %>
                  </a>
                  <!-- Upload new avatar bubble -->
                  <div class="avatar-bubble">
                    <a href="#" data-toggle="modal" data-target="#upload-avatar"><i class="fa fa-plus"></i> Изменить аватар</a>
                  </div>
                </div>
              </div>
              <!-- Modal window: Send a private message -->
                <div class="modal fade" id="upload-avatar" tabindex="-1" role="dialog" aria-labelledby="upload-avatar-title" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="upload-avatar-title">Загрузить новый аватар</h4>
                      </div>
                      <div class="modal-body">
                        <p>Выберите фото для загрузки.</p>
                        <%= form_for (current_user) do |f| %>
                          <div class="form-group">
                            <label for="file">Файл</label>
                            <%= f.file_field :avatar, :class => "form-control", :required => "required" %>
                            <p class="help-block">Файл должен быть меньше 5Mb.</p>
                          </div>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
                          <%= f.submit :value => "Отправить", :class => "btn btn-green" %>
                        <% end %>
                      </div>
                    </div><!-- /.modal-content -->
                  </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                <!-- End of modal window -->
            </div>
            <!-- Main profile info -->
            <div class="col-sm-8">
              <h3 class="hl"><%= "#{current_user.name} #{current_user.surname}" %> <small><%= current_user.role %></small></h3>
              <hr>
              <!-- User status update form -->
              <div class="user-status">
                <p class="show"><a href="#" id="update-status">Click here to update your status.</a></p>
                <form class="hidden" role="form">
                  <div class="row">
                    <div class="col-sm-10">
                      <div class="input-group">
                        <input type="text" class="form-control input-sm" id="status" placeholder="Update your status">
                        <span class="input-group-btn">
                          <button type="submit" class="btn btn-sm btn-default">Save</button>
                        </span>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="bottom-15">
                <a href="#" class="btn btn-green btn-sm" data-toggle="modal" data-target="#sendemail"><i class="fa fa-envelope"></i> Send e-mail</a> 
                <a href="#" class="btn btn-default btn-sm" data-toggle="modal" data-target="#sendpm"><i class="fa fa-mail-forward text-muted"></i> Send PM</a>
                <!-- Modal window: Send an email -->
                <div class="modal fade" id="sendemail" tabindex="-1" role="dialog" aria-labelledby="sendemailtitle" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <img src="img/face1.jpg" alt="...">
                        <h4 class="modal-title" id="sendemailtitle">Administrator</h4>
                        <p class="text-muted"><i class="fa fa-envelope"></i> New Email</p>
                        <div class="clearfix"></div>
                      </div>
                      <div class="modal-body">
                        <form role="form">
                          <div class="form-group">
                            <label for="subject" class="sr-only">Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="Subject">
                          </div>
                          <div class="form-group">
                            <label for="message-1" class="sr-only">Message</label>
                            <textarea class="form-control" rows="3" id="message-1" placeholder="Enter your message here"></textarea>
                          </div>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                          <button type="button" class="btn btn-green" data-dismiss="modal">Send Email</button>
                        </form>
                      </div>
                    </div><!-- /.modal-content -->
                  </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                <!-- End of modal window -->
                <!-- Modal window: Send a private message -->
                <div class="modal fade" id="sendpm" tabindex="-1" role="dialog" aria-labelledby="sendpmtitle" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <img src="img/face1.jpg" alt="...">
                        <h4 class="modal-title" id="sendpmtitle">Administrator</h4>
                        <p class="text-muted"><i class="fa fa-envelope"></i> New PM</p>
                        <div class="clearfix"></div>
                      </div>
                      <div class="modal-body">
                        <form role="form">
                          <div class="form-group">
                            <label for="message-2" class="sr-only">Message</label>
                            <textarea class="form-control" rows="3" id="message-2" placeholder="Enter your message here"></textarea>
                          </div>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                          <button type="button" class="btn btn-green" data-dismiss="modal">Send Message</button>
                        </form>
                      </div>
                    </div><!-- /.modal-content -->
                  </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                <!-- End of modal window -->
              </div>
            </div>
          </div>
          <!-- About Me 
          <div class="row">
            <div class="col-sm-12">
              <h4 class="hl"><i class="fa fa-user"></i> About Me</h4>
              <p class="bottom-15">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean tortor nunc, dapibus a est sed, tempus bibendum arcu. Nullam pretium arcu in neque congue tempor. Quisque quis mauris sit amet magna fermentum tincidunt et a enim. Aliquam eu rhoncus libero, a pulvinar metus.</p>
              <hr>
            </div>
          </div>
           -->
          <div class="row">
            <div class="col-sm-12">
              <h4 class="hl"><i class="fa fa-info-circle"></i> Информация о пользователе</h4>
                  
              <table class="table">
                <tbody>
                  <tr>
                    <td class="text-muted">Position</td>
                    <td>Administrator</td>
                  </tr>
                  <tr>
                    <td class="text-muted">Company Name</td>
                    <td>Highland Ltd.</td>
                  </tr>
                  <tr>
