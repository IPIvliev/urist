        <!-- Stats and Galery -->
        <div class="col-sm-8 col-sm-offset-4 col-md-3 col-md-offset-0">
          <div class="block-inverse">
            <div class="head-inverse">
              <div class="text-center">
                <strong class="text-muted">Количество жалоб</strong>
                <h1 class="text-center text-green">1</h1>
              </div>
            </div>
            <div class="body-inverse">
              <p class="text-center">
                <strong class="text-muted">My Gallery</strong>
