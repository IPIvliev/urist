<!-- Main body
================== -->
  <div class="wrapper">
    <div class="section-header">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <!-- Remove the .animated class if you don't want things to move -->
            <h1 class="animated slideInLeft"><span>Жалоба №<%= @apeal.id %></span></h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <!-- Blog Post -->
          <h4><%= @apeal.who %></h4>
          <ul class="text-muted list-inline">
            <li><i class="fa fa-calendar"></i> <%= Russian::strftime(@apeal.created_at, "%d %B %Y") %></li>
          </ul>
          <hr>
          <h4>Текст жалобы</h4>
          <p class="blog-text">
            <%= @apeal.term %>
          </p>

          <% if @apeal.text.present? %>
            <hr>
            <h4>Предпринятые действия</h4>
              <p class="blog-text">
                <%= @apeal.text %>
              </p>
              <br>
          <% end %>
          <strong><%= link_to "Все жалобы", apeals_path %></strong>
        </div>
        <div class="col-sm-4">
          <!-- Social Links -->
          <h3 class="hl">Контакты</h3>
          <hr>
          <div class="">
            <strong>ФИО:</strong> <%= @apeal.who %><br>
            <strong>Телефон:</strong> <%= @apeal.phone %><br>
            <% if @apeal.korpus.present? %>
              <strong>Адрес:</strong> <%= "#{@apeal.street}, дом #{@apeal.house}, корпус #{@apeal.korpus}" %>
            <% else %>
              <strong>Адрес:</strong> <%= "#{@apeal.street}, дом #{@apeal.house}" %>
            <% end %>
            <br><br>
            <% if current_user.role == "apeals_manager" || current_user.role == "director" || current_user.role == "admin" %>
              <%= link_to 'Изменить', edit_apeal_path(@apeal), :class => "btn btn-red" %>
            <% end %>
            <div class="clearfix"></div>
          </div>
       
        </div>
      </div>
    </div>
  </div>