<%= form_for(@apeal) do |f| %>
  <% if @apeal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apeal.errors.count, "error") %> prohibited this apeal from being saved:</h2>

      <ul>
      <% @apeal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

        <div class="row">
          <div class="col-md-6">
            <%= f.label "ФИО (кто жалуется)" %><br />
            <%= f.text_field :who, :class => "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label "Номер телефона (кто жалуется)" %><br />
            <%= f.text_field :phone, :class => "form-control", :id => "phone" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.label "Улица" %><br />
            <%= f.text_field :street, :class => "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.label "Номер дома" %><br />
            <%= f.text_field :house, :class => "form-control" %>
          </div>
          <div class="col-md-4">
            <%= f.label "Корпус" %><br />
            <%= f.text_field :korpus, :class => "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label "Содержание" %><br />
            <%= f.text_area :term, :cols => 120, :rows => 7, :class => "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label "Предпринятые шаги для устранения жалобы" %><br />
            <%= f.text_area :text, :rows => 11, :cols => 120, :class => "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-12">
            <label>Жалоба закрыта?
            <%= f.check_box :finish, :class => "form-control" %>
            </label>
          </div>
        </div>
        <br>
  <div class="actions">
    <%= f.submit "Сохранить", :class => "btn btn-lg btn-red"  %>
  </div>
<% end %>

<script type="text/javascript">
    jQuery(function($){
       $("#phone").mask("+7 (999) 999-99-99");
    });
</script>
<script src="/js/jquery.maskedinput.js" type="text/javascript"></script>